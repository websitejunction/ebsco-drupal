{#
/**
* @file
* Default theme implementation to display a block.
*
* @see template_preprocess_block()
*
* @ingroup themeable
*/
#}
{% set classes = [
    'clear-both',
] %}
<div{{ attributes.addClass(classes) }}>
    {% for value in content %}
        <p>{{value}}</p>
    {% endfor %}
    <div id="weather-forecast-wrapper">
      <div id="weather-city-country">
        <div class="weather-city">{{ items.city }}, {{ items.country }}</div>
        <p>{{ items.timezone }}</p>
      </div>
      <div id="weather-icon-desc">
        <div class="weather-icon"><img src="http://openweathermap.org/img/wn/{{ items.icon }}.png" /><div class="weather-description">{{ items.description }}</div></div>
      </div>
      <div id="weather-temp-c" style="display:block;">{{ items.temp|round }}ยบ C</div>
      <div id="weather-temp-f" style="display:none;">{{ items.tempf|round }}ยบ F</div>
    </div>
    <p style="font-weight:bold; clear:both;">
      <a href="javascript:SwapDivs('weather-temp-c','weather-temp-f')">C/F</a>
    </p>


</div>
